{% comment %}
  Promotional banner block for displaying special offers
{% endcomment %}

<div class="promotion-banner" id="promotion-banner-{{ block.id }}">
  <div class="promotion-banner__content">
    {{ block.settings.banner_text }}
  </div>
  {% if block.settings.show_close_button %}
    <button class="promotion-banner__close" onclick="closeBanner('promotion-banner-{{ block.id }}')">
      Ã—
    </button>
  {% endif %}
</div>

<style>
  .promotion-banner {
    background-color: {{ block.settings.background_color | default: '#ff6b6b' }};
    color: {{ block.settings.text_color | default: '#ffffff' }};
    text-align: center;
    padding: 12px 20px;
    font-size: {{ block.settings.font_size | default: '16px' }};
    font-weight: {{ block.settings.font_weight | default: 'bold' }};
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 9999;
    width: 100%;
    box-sizing: border-box;
    margin: 0;
  }

  body {
    margin-top: 60px !important;
  }

  .promotion-banner__content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .promotion-banner__close {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: inherit;
    font-size: 20px;
    cursor: pointer;
    padding: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color 0.2s ease;
  }

  .promotion-banner__close:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }

  @media (max-width: 768px) {
    .promotion-banner {
      padding: 10px 50px 10px 20px;
      font-size: 14px;
    }
  }
</style>

<script>
  const bannerId = 'promotion-banner-{{ block.id }}';

  function adjustBodyMargin() {
    const banner = document.getElementById(bannerId);
    if (banner && banner.style.display !== 'none') {
      document.body.style.marginTop = banner.offsetHeight + 'px';
    } else {
      document.body.style.marginTop = '0px';
    }
  }

  function closeBanner(id) {
    const banner = document.getElementById(id);
    if (!banner) return;

    banner.style.display = 'none';
    if ({{ block.settings.remember_close | json }}) {
      localStorage.setItem('banner-closed-' + id, 'true');
    }
    adjustBodyMargin();
  }

  function resetBanner(id) {
    localStorage.removeItem('banner-closed-' + id);
    const banner = document.getElementById(id);
    if (!banner) return;

    banner.style.display = 'block';
    adjustBodyMargin();
  }

  document.addEventListener('DOMContentLoaded', function() {
    const banner = document.getElementById(bannerId);
    const wasClosed = localStorage.getItem('banner-closed-' + bannerId);

    if ({{ block.settings.remember_close | json }} && wasClosed === 'true') {
      if (banner) banner.style.display = 'none';
      console.log('Banner hidden due to localStorage');
    } else {
      if (banner) banner.style.display = 'block';
      console.log('Banner is visible');
      localStorage.removeItem('banner-closed-' + bannerId); // clear previous close if remember_close is false
    }

    adjustBodyMargin();
  });

  // Double-click + Ctrl/Cmd to reset
  document.addEventListener('dblclick', function(e) {
    if (e.ctrlKey || e.metaKey) {
      resetBanner(bannerId);
      console.log('Banner reset via double-click');
    }
  });

  // Keyboard shortcut Ctrl+Shift+B to reset
  document.addEventListener('keydown', function(e) {
    if (e.ctrlKey && e.shiftKey && e.key === 'B') {
      resetBanner(bannerId);
      console.log('Banner reset via keyboard shortcut');
    }
  });

  window.addEventListener('resize', adjustBodyMargin);
</script>

{% schema %}
{
  "name": "Promotion Banner",
  "target": "head",
  "stylesheet": "custom-banner.css",
  "settings": [
    {
      "type": "text",
      "id": "banner_text",
      "label": "Banner Text",
      "default": "ðŸŽ‰ Free Shipping on All Orders! ðŸŽ‰"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ff6b6b"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "Font Size",
      "options": [
        {"value": "14px","label": "Small"},
        {"value": "16px","label": "Medium"},
        {"value": "18px","label": "Large"}
      ],
      "default": "16px"
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font Weight",
      "options": [
        {"value": "normal","label": "Normal"},
        {"value": "bold","label": "Bold"}
      ],
      "default": "bold"
    },
    {
      "type": "checkbox",
      "id": "show_close_button",
      "label": "Show Close Button",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "remember_close",
      "label": "Remember when closed",
      "default": false,
      "info": "If enabled, the banner will stay hidden after the user closes it"
    }
  ]
}
{% endschema %}
